<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg12"
    tools:context=".Home">


    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        app:cardCornerRadius="75dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Username"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"/>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Welcome to the App!"
        android:textSize="19sp"
        android:textColor="#888"
        android:layout_marginBottom="40dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_microfinances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#9AF48F"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Content of the CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microfinances"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microfinances description goes here."
                    android:textColor="#888" />


            </LinearLayout>

            <!-- Arrow Icon -->
            <ImageView
                android:id="@+id/arrow_icon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/right_arrow"
                android:clickable="true"
                android:onClick="redirectMicro"
                android:contentDescription="Navigate" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView 2: Marketplace -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_marketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#8EFB81"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marketplace"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marketplace description goes here."
                    android:textColor="#888" />

            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_icon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/right_arrow"
                android:clickable="true"
                android:contentDescription="Navigate" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_rental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6BF65A"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental description goes here."
                    android:textColor="#888" />

            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_icon3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/right_arrow"
                android:clickable="true"
                android:contentDescription="Navigate" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView 4: Tourism -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tourism"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#49F135"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tourism"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tourism description goes here."
                    android:textColor="#888" />

            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_icon4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/right_arrow"
                android:clickable="true"
                android:contentDescription="Navigate" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
